<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.screens.screen_error.ErrorFragment">

    <ImageView
        android:id="@+id/flying_saucer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_flying_saucer" />

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_title"
        android:textColor="#050510"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/suggestion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/error_title2"
        android:textColor="#97979B"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/try_again_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/ripple_text"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:text="@string/error_retry"
        android:textColor="#6534FF"
        android:textSize="16sp" />

</LinearLayout>